      %p.user_name ユーザー名
      %p.text_awesome
        = link_to "/messages" do
          %i.fa.fa-cog
        %i.fas.fa-edit
    .left_lower
      %p.group_name 投稿者名
      %p.new_message test.

      %p.group_name 投稿者名
      %p.new_message test.
