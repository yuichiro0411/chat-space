    .chat_mainspace
      .title
        %button.edit__button
          edit
        %p.title_group_title タイトル
        %p.title_group_member AAAAAAAAAAAAAAAAAABBBBBBAAAAAAAAAAAAAAAAAAAAAA
      .chat_texts
        %p.testrightbold 太字
        %p.test_date 日付日付日付
        %o.test_right_nomal
          = fa_icon("home")
      .chat_texts
        %p.testrightbold 太字
        %p.test_date 日付日付日付
        %o.test_right_nomal
          = fa_icon("home")
    #footer
      .form_area
        %form#message_form{:method => "post"}
          .chat-main
            %input.form_part{:name => "message[body]", :placeholder => "type a message", :type => "text"}/
            %label.chat-file
              %input#message_image_upload.fas{:type => "file", :name => "message[image]",}/
              %i.fa.a-image
            %input#send__button{"data-disable-with" => "Send", :name => "commit", :type => "submit", :value => "Send!"}/




